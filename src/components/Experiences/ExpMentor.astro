import bslc from "../icons/images/BSLC.jpg"

const tasks = [
  "The Mentor Scholarship is one of the scholarships offered by Binus University for students with academic excellence who are willing to improve the educational experience of their peers.",
  "Mentors guide 3 to 9 students to enhance their learning process for better academic performance and maximize their potential in peer-to-peer sessions.",
  "Conduct a minimum of 10 mentoring sessions per semester, each lasting approximately 60 to 100 minutes, covering diverse topics such as Algorithm and Programming, Algorithm Design and Analysis, Object-Oriented Programming, and Data Structures to address individual learning needs effectively. ",
  "Provide academic resources and information relevant to the subjects being studied."
]
---

